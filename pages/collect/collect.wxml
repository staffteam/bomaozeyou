<!--pages/collect/collect.wxml-->
<view class='nav'>
  <view class='li {{item.id === navon?"on":""}}' data-id="{{item.id}}" bindtap="navClick" wx:for="{{navData}}" wx:key="{{item.id}}" wx:for-index="index" wx:for-item="item">
    {{item.title}}
  </view>
</view>
<view class='article-list'>
    <view class="ul">
      <view class='li' data-id="{{item.id}}" data-keycode="{{item.keycode}}" bindtap="bmClick" wx:for="{{articleListData}}" wx:key="{{item.id}}" wx:for-index="index" wx:for-item="item" wx-if="{{item.keycode==navon}}">
        <view class='l'>
          <image src="{{item.img_url}}" mode="aspectFill"></image>
        </view>
        <view class='r'>
          <view class='title lines'>{{item.title}}</view>
          <view class='c'>
            <view class='type {{item.keycode}}'>{{articleType[item.keycode]}}</view>
          </view>
          <view class='b'>
            <view class='time-bm' wx-if="{{item.keycode=='Activity'}}">{{item.end_time}}</view>
            <view class='time-zx' wx-if="{{item.keycode=='News'}}">{{item.publisher_time}}</view>
          </view>
        </view>
      </view>
      <view class='not-data' wx-if="articleListData.length==0" >暂无收藏</view>
    </view>
  </view>