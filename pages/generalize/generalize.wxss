.generalize {
  padding: 20rpx 0;
  background-color: #F7F7F7;
  min-height: calc(100vh - 40rpx);
}

.generalize .t {
  background-color: white;
  padding: 28rpx 32rpx 20rpx;
}

.generalize .t .title {
  font-size: 34rpx;
  line-height: 34rpx;
}

.generalize .t .income {
  margin-top: 25rpx;
  color: #F24724;
  font-size: 40rpx;
}

.generalize .t .btn {
  margin-top: 47rpx;
  overflow: hidden;
}

.generalize .t .btn .l {
  font-size: 34rpx;
  line-height: 64rpx;
  color: #666;
  float: left;
}

.generalize .t .btn .r {
  float: right;
}

.generalize .t .btn .r-btn {
  width: 196rpx;
  height: 64rpx;
  background: linear-gradient(90deg, rgba(60, 216, 251, 1) 0%, rgba(28, 176, 246, 1) 100%);
  border-radius: 35rpx;
  text-align: center;
  line-height: 64rpx;
  color: white;
  font-size: 28rpx;
}
.generalize .c{
    margin-top: 20rpx;
    background-color: white;
    padding: 45rpx 0 60rpx;
    overflow: hidden;
}
.generalize .c .list{
  width: 25%;
  float:left;
  text-align: center;
}
.generalize .c .list .icon{
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  overflow: hidden;
  margin: 0 auto;
  box-shadow: 0 0 10rpx rgba(0,0,0,0.2);
}
.generalize .c .list .icon image{
  width:100%;
  height: 100%;
}
.generalize .c .list .title{
  font-size: 34rpx;
  color: #666;
  margin-top: 15rpx;
}
.generalize .b{
  padding: 20rpx 23rpx;
  margin-top: 20rpx;
  background-color: white;
}