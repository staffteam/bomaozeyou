@keyframes fade-in {
  0% {
    top: 1000rpx;
    opacity: 0;
  }/*初始状态 透明度为0*/

  40% {
    top: 1000rpx;
    opcity: 0;
  }/*过渡状态 透明度为0*/

  100% {
    margin-top: 0rpx;
    opacity: 1;
  }/*结束状态 透明度为1*/
}

.date-picker {
  position: fixed;
  top: 0;
  left: 0;
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100%;
  z-index: 9;
}

.date-picker-mask {
  position: absolute;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.4);
  width: 100%;
  height: 100%;
  z-index: 10;
}



.date-picker-content {
  position: absolute;
  bottom: -500rpx;
  left: 0;
  width: 100%;
  height: 500rpx;
  background-color: #f7f7f9;
  z-index: 33;
  overflow: hidden;
  transition: 0.3s bottom;
}

.date-picker-content.on {
  bottom: 0;
}

.date-picker-content-top {
  padding: 32rpx 24rpx;
  overflow: hidden;
}

.hover-class {
  background-color: #e6e6e6;
}

.date-picker-content-line {
  /* background-color: #d3dce6;
  height: 1px;
  width: 100%; */
}

.date-picker-content-cancel {
  font-size: 32rpx;
  line-height: 45rpx;
  float: left;
}

.date-picker-content-sure {
  font-size: 32rpx;
  line-height: 45rpx;
  color: #1cb0f6;
  float: right;
}

.date-picker-content-center {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 362rpx;
  overflow: hidden;
  margin-top: 6rpx;
  margin-bottom: 6rpx;
  justify-content: space-between;
  background-color: white;
}

.date-picker-content-item {
  width: 33.3%;
  height: 210rpx;
  text-align: center;
}
