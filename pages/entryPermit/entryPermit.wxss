/* pages/collect/collect.wxss */

.nav {
  height: 94rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px -1px 0px 0px rgba(229, 229, 229, 1);
  z-index: 999;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  text-align: center;
}
.not-null{
  color: #999;
  text-align: center;
  line-height: 200rpx;
  font-size: 28rpx;
}
page {
  background-color: #f7f7f7;
}

.nav .li {
  width: 33.33%;
  display: inline-block;
  line-height: 94rpx;
  font-size: 32rpx;
  position: relative;
}

.nav .li.on {
  color: #1cb0f6;
}

.nav .li.on::before {
  position: absolute;
  content: '';
  left: 50%;
  transform: translateX(-50%);
  bottom: 0;
  width: 96rpx;
  height: 6rpx;
  background: rgba(28, 176, 246, 1);
  border-radius: 3rpx;
}

.nav-h {
  height: 94rpx;
}

.article-list .li {
  margin: 32rpx;
  padding: 26rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 6rpx;
}

.article-list .li .title {
  font-size: 34rpx;
  font-weight: 600;
  color: rgba(51, 51, 51, 1);
  line-height: 48rpx;
}

.article-list .li .title text {
  width: 76rpx;
  height: 32rpx;
  background: linear-gradient(90deg, rgba(255, 222, 54, 1) 0%, rgba(255, 186, 25, 1) 100%);
  border-radius: 6rpx;
  font-size: 20rpx;
  color: rgba(255, 255, 255, 1);
  line-height: 32rpx;
  margin-top: 8rpx;
  text-align: center;
  float: left;
  margin-right: 8rpx;
}

/* 学科类 */

.article-list .li .title text.type11 {
  background: linear-gradient(90deg, rgba(60, 216, 251, 1) 0%, rgba(28, 176, 246, 1) 100%);
}

/* 其他类 */

.article-list .li .title text.type15 {
  background: linear-gradient(90deg, rgba(76, 227, 185, 1) 0%, rgba(36, 196, 131, 1) 100%);
}

/* 体育类 */

.article-list .li .title text.type14 {
  background: linear-gradient(90deg, rgba(250, 125, 74, 1) 0%, rgba(242, 71, 36, 1) 100%);
}

/* 艺术类 */

.article-list .li .title text.type12 {
  background: linear-gradient(90deg, rgba(181, 154, 252, 1) 0%, rgba(134, 88, 253, 1) 100%);
}

/* 科创类 */

.article-list .li .title text.type13 {
  background: linear-gradient(90deg, rgba(255, 222, 54, 1) 0%, rgba(255, 186, 25, 1) 100%);
}

.article-list .li .c {
  margin-top: 34rpx;
  overflow: hidden;
}

.article-list .li .c .l {
  width: 144rpx;
  height: 144rpx;
  border-radius: 50%;
  overflow: hidden;
  float: left;
}

.article-list .li .c .r {
  margin-left: 196rpx;
}

.article-list .li .c .r .name {
  font-size: 28rpx;
  color: rgba(153, 153, 153, 1);
  line-height: 40rpx;
  margin-top: 12rpx;
}

.article-list .li .c .r .name text {
  color: #666;
}

.article-list .li .b {
  margin-top: 26rpx;
  overflow: hidden;
}

.article-list .li .b view:last-child {
  float: right;
  width: 150rpx;
  height: 64rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 32rpx;
  border: 1px solid rgba(153, 153, 153, 1);
  font-size: 26rpx;
  color: rgba(153, 153, 153, 1);
  line-height: 64rpx;
  text-align: center;
}

.article-list .li .b view:first-child {
  width: 152rpx;
  height: 64rpx;
  float: right;
  margin-left: 19rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 32rpx;
  border: 1px solid rgba(28, 176, 246, 1);
  font-size: 26rpx;
  color: rgba(28, 176, 246, 1);
  line-height: 64rpx;
  text-align: center;
}
