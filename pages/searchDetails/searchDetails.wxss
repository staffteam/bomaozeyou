/* pages/article/article.wxss */

.home-search {
  height: 70rpx;
  background: rgba(247, 247, 247, 1);
  border-radius: 35rpx;
  width: 92%;
  margin: 0 auto;
  padding: 10rpx 30rpx;
}

.home-search text {
  font-size: 30rpx;
  float: left;
  display: block;
  color: #999;
  line-height: 50rpx;
  height: 50rpx;
}

.home-search input {
  font-size: 28rpx;
  color: #999;
  margin-left: 40rpx;
  height: 50rpx;
}

.home-banner {
  width: 92%;
  margin: 25rpx auto;
}

.home-banner .banner {
  height: 330rpx;
  overflow: hidden;
  border-radius: 4px;
}

.home-banner image {
  width: 100%;
}

.article-list {
  width: 92%;
  margin: 0 auto;
  margin-top: 48rpx;
  overflow: hidden;
}

.article-list .title {
  font-size: 36rpx;
  color: #333;
  line-height: 50rpx;
  font-weight: bold;
}

.article-list .ul .li {
  margin-top: 32rpx;
  overflow: hidden;
}

.article-list .ul .li .l {
  width: 312rpx;
  height: 192rpx;
  border-radius: 6rpx;
  float: left;
  overflow: hidden;
}

.article-list .ul .li .l image {
  width: 100%;
  height: 100%;
}

.article-list .ul .li .r {
  margin-left: 336rpx;
}

.article-list .ul .li .r .title {
  font-size: 30rpx;
  font-weight: 600;
  line-height: 36rpx;
}

.article-list .ul .li .r .c {
  height: 35rpx;
  margin-top: 10rpx;
}

.article-list .ul .li .r .c .zd {
  width: 60rpx;
  height: 35rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 6rpx;
  border: 1px solid rgba(242, 71, 36, 1);
  font-size: 20rpx;
  color: rgba(242, 71, 36, 1);
  line-height: 35rpx;
  text-align: center;
  margin-right: 10rpx;
  float: left;
}

.article-list .ul .li .r .c .type {
  width: 60rpx;
  height: 35rpx;
  border-radius: 6rpx;
  font-size: 20rpx;
  text-align: center;
  line-height: 35rpx;
  display: inline-block;
  color: white;
  float: left;
}

.article-list .ul .li .r .c .type.Activity,.article-list .ul .li .r .c .type.activity {
  background: linear-gradient(90deg, rgba(250, 125, 74, 1) 0%, rgba(242, 71, 36, 1) 100%);
}

.article-list .ul .li .r .c .type.News {
  background: linear-gradient(90deg, rgba(33, 192, 254, 1) 0%, rgba(48, 175, 255, 1) 100%);
}
.article-list .ul .li .r .b{
  height: 40rpx;
  margin-top: 36rpx;
}
.article-list .ul .li .r .b .time-bm {
  font-size: 26rpx;
  color: rgba(242, 71, 36, 1);
  line-height: 40rpx;
  float: left;
}

.article-list .ul .li .r .b .time-zx {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(155, 155, 155, 1);
  line-height: 40rpx;
  float: left;
}
.article-list .ul .li .r .b .share{
  float: right;
  line-height: 40rpx;
  font-size: 26rpx;
  color: #999;
  position: relative;
}
.article-list .ul .li .r .b button {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 9;
  display: block;
  opacity: 0;
}
