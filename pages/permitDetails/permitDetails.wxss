/* pages/permitDetails/permitDetails.wxss */
.back image{
  display: block;
}
.permit-details {
  position: relative;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  background-color: #bbe7fc;
}

.permit-details .content {
  position: absolute;
  top: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 662rpx;
}

.content-back {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.content-text {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 9;
}

.content-text .title {
  width: 75%;
  margin: 0 auto;
  text-align: center;
  font-size: 35rpx;
  line-height: 40rpx;
  height: 140rpx;
  padding: 30rpx 0;
}

.content-text .top {
  width: 180rpx;
  height: 180rpx;
  margin: 20rpx auto 30rpx auto;
  border-radius: 50%;
  overflow: hidden;
}

.content-text .info .list {
  font-size: 30rpx;
  line-height: 40rpx;
  width: 440rpx;
  margin: 0 auto;
  overflow: hidden;
  margin-top: 15rpx;
}

.content-text .info .list image {
  float: left;
  width: 20rpx;
  margin-right: 10rpx;
  margin-top: 10rpx;
}
.content-text .info .list view{
  margin-left: 25rpx;
}
.content-text .info .list text.w26 {
  width: 230rpx;
  display: block;
  float: left;
}

.content-text .info .list view:last-child text.w26 {
  width: 150rpx;
}

.content-text .b {
  width: 90%;
  margin: 0 auto;
  margin-top: 100rpx;
  overflow: hidden;
}

.content-text .b .l {
  float: left;
  width: 230rpx;
  height: 230rpx;
  margin-top: 20rpx;
}

.content-text .b .r {
  margin-left: 250rpx;
  font-size: 26rpx;
  line-height: 35rpx;
  color: #666;
}
.content-text .b .r>.draw{
  min-height: 175rpx;
}
.content-text .b .r .btn {
  width: 270rpx;
  height: 78rpx;
  background: linear-gradient(90deg, rgba(33, 192, 254, 1) 0%, rgba(48, 175, 255, 1) 100%);
  border-radius: 40rpx;
  margin: 30rpx 0 0 30rpx;
  font-size: 30rpx;
  text-align: center;
  color: rgba(255, 255, 255, 1);
  line-height: 78rpx;
}

.print{
  width: 100%;
  height: 100vh;
}

.hint-open {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  z-index: 99999;
  display: none;
}
.hint-open.show{
  display: block;
}
.hint-open .back {
  background-color: rgba(0, 0, 0, 0.4);
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.hint-open .content {
  width: 540rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 10rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 9;
  padding-bottom: 40rpx;
}

.hint-open .content .title {
  font-size: 32rpx;
  color: rgba(28, 176, 246, 1);
  line-height: 45rpx;
  padding-top: 32rpx;
  text-align: center;
}

.hint-open .content .desc {
  font-size: 26rpx;
  color: rgba(153, 153, 153, 1);
  line-height: 37rpx;
  margin: 26rpx 48rpx 0;
  text-align: center;
}

.hint-open .content .desc text {
  color: #1cb0f6;
}

.hint-open .content .btn {
  width: 270rpx;
  height: 70rpx;
  background: linear-gradient(90deg, rgba(60, 216, 251, 1) 0%, rgba(28, 176, 246, 1) 100%);
  border-radius: 35rpx;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 1);
  line-height: 70rpx;
  text-align: center;
  margin: 0 auto;
  margin-top: 50rpx;
}
.hint-open .content .close{
  position: absolute;
  top: 14rpx;
  right: 24rpx;
}
.hint-open .content .close text{
  font-size: 24rpx;
  color: #999999;
}