/* pages/footerNav/footerNav.wxss */
.footer-h{
  height: 100rpx;
}
.footer-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  border-top: 1px solid #e5e5e5;
  padding:10rpx 0;
  background-color: white;
  z-index: 99;
}
.badges{
  position: absolute;
  left:110rpx;
  top:-10rpx;
  z-index: 9;
}
.footer-nav .ul {
  height: 86rpx;
}
.footer-nav .ul .li.on .title{
  color:#1CB0F6;
}
.footer-nav .ul .li {
  width: 25%;
  float: left;
  position: relative;
}

.footer-nav .ul .li .img {
  width: 55rpx;
  height: 55rpx;
  margin: 0 auto;
  display: none;
  overflow: hidden;
  margin-top: -5rpx;
}

.footer-nav .ul .li .img image {
  width: 100%;
  height: 100%;
}

.footer-nav .ul .li .title {
  text-align: center;
  font-size: 20rpx;
  color: rgba(127, 131, 137, 1);
  line-height: 28rpx;
  margin-top: 8rpx;
}
