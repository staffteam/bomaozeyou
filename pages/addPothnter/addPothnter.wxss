/* pages/addPothnter/addPothnter.wxss */

page {
  background-color: #f7f7f7;
}

.tips {
  height: 68rpx;
  line-height: 68rpx;
  background: rgba(28, 176, 246, 0.1);
  font-size: 24rpx;
  color: rgba(28, 176, 246, 1);
  padding: 0 32rpx;
}

.formLine {
  height: 20rpx;
  width: 100%;
  background-color: #f7f7f7;
}
.form{
  padding-bottom: 30rpx;
}
.form .list {
  background-color: white;
  overflow: hidden;
  border-bottom: 1px solid #eee;
}

.form .list.notline {
  border-bottom: 0px;
}

.form .list>text {
  float: left;
  width: 230rpx;
  font-size: 32rpx;
  line-height: 104rpx;
  padding-left: 32rpx;
  display: block;
}

.form .list .picker {
  margin-left: 260rpx;
  line-height: 104rpx;
  font-size: 28rpx;
}

.form .list .picker .top-img {
  width: 88rpx;
  height: 88rpx;
  float: left;
  margin-top: 8rpx;
  overflow: hidden;
  border-radius: 50%;
}

.form .list .picker text.iconfont {
  float: right;
  display: block;
  margin-right: 32rpx;
  line-height: 104rpx;
  font-size: 28rpx;
  color: #ccc;
}

.form .list input{
  width: calc(100% - 260rpx);
  float:left;
  height: 104rpx;
  font-size: 28rpx;
  margin-left: 30rpx;
}
.form .list textarea{
  width: calc(100% - 260rpx);
  margin-left: 260rpx;
  height: 208rpx;
  font-size: 28rpx;
  padding:40rpx 0;
}
.open {
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 9999;
  height: 100vh;
  width: 100%;
}

.open.show {
  display: block;
}

.open.hide {
  display: none;
}

.open-back {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.4);
}

.open-back.show {
  display: block;
}

.open-back.hide {
  display: none;
}

.open .content {
  position: absolute;
  bottom: -500rpx;
  left: 0;
  width: 100%;
  height: 500rpx;
  transition: 0.3s bottom;
  background-color: #f7f7f9;
}

.open .content.down {
  bottom: 0;
}

.open .content .t {
  padding: 32rpx 24rpx;
  overflow: hidden;
}

.open .content .t .l {
  font-size: 32rpx;
  line-height: 45rpx;
  float: left;
}

.open .content .t .r {
  font-size: 32rpx;
  line-height: 45rpx;
  color: #1cb0f6;
  float: right;
}

.open .content .open-list {
  height: calc(100% - 109rpx);
  width: 100%;
  text-align: center;
}

.open .content .open-list view {
  text-align: center;
  font-size: 28rpx;
}

.open.pothunterOpen .content {
  bottom: -700rpx;
  height: 700rpx;
}

.open.pothunterOpen .content.down {
  bottom: 0;
}

.submit {
  width: 686rpx;
  height: 88rpx;
  background: linear-gradient(90deg, rgba(33, 192, 254, 1) 0%, rgba(48, 175, 255, 1) 100%);
  border-radius: 47rpx;
  margin: 50rpx auto 0;
  font-size: 36rpx;
  text-align: center;
  color: rgba(255, 255, 255, 1);
  line-height: 88rpx;
}



.hint-open {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  z-index: 99999;
  display: none;
}
.hint-open.show{
  display: block;
}
.hint-open .back {
  background-color: rgba(0, 0, 0, 0.4);
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.hint-open .content {
  width: 540rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 10rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 9;
  padding-bottom: 40rpx;
}

.hint-open .content .title {
  font-size: 32rpx;
  color: rgba(28, 176, 246, 1);
  line-height: 45rpx;
  padding-top: 32rpx;
  text-align: center;
}

.hint-open .content .desc {
  font-size: 26rpx;
  color: rgba(153, 153, 153, 1);
  line-height: 37rpx;
  margin: 26rpx 48rpx 0;
}

.hint-open .content .desc text {
  color: #1cb0f6;
}

.hint-open .content .btn {
  width: 270rpx;
  height: 70rpx;
  background: linear-gradient(90deg, rgba(60, 216, 251, 1) 0%, rgba(28, 176, 246, 1) 100%);
  border-radius: 35rpx;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 1);
  line-height: 70rpx;
  text-align: center;
  margin: 0 auto;
  margin-top: 50rpx;
}
.hint-open .content .close{
  position: absolute;
  top: 14rpx;
  right: 24rpx;
}
.hint-open .content .close text{
  font-size: 24rpx;
  color: #999999;
}

.form .list.list-after input{
  width: calc(100% - 360rpx);
}
.form .list.list-after .after{
  width: 100rpx;
  float:right;
  text-align: center;
  line-height: 104rpx;
  font-size: 28rpx;
}