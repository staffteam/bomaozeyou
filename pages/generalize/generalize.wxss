.generalize {
  padding: 20rpx 0;
  background-color: #F7F7F7;
  min-height: calc(100vh - 40rpx);
}

.generalize .t {
  background-color: white;
  padding: 28rpx 32rpx 20rpx;
}

.generalize .t .title {
  font-size: 34rpx;
  line-height: 34rpx;
}

.generalize .t .income {
  margin-top: 25rpx;
  color: #F24724;
  font-size: 40rpx;
}

.generalize .t .btn {
  margin-top: 47rpx;
  overflow: hidden;
}

.generalize .t .btn .l {
  font-size: 34rpx;
  line-height: 64rpx;
  color: #666;
  float: left;
}

.generalize .t .btn .r {
  float: right;
}

.generalize .t .btn .r-btn {
  width: 196rpx;
  height: 64rpx;
  background: linear-gradient(90deg, rgba(60, 216, 251, 1) 0%, rgba(28, 176, 246, 1) 100%);
  border-radius: 35rpx;
  text-align: center;
  line-height: 64rpx;
  color: white;
  font-size: 28rpx;
}

.generalize >.c {
  margin-top: 20rpx;
  background-color: white;
  padding: 45rpx 0 60rpx;
  overflow: hidden;
}

.generalize >.c .list {
  width: 25%;
  float: left;
  text-align: center;
}

.generalize >.c .list .icon {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  overflow: hidden;
  margin: 0 auto;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.2);
}

.generalize >.c .list .icon image {
  width: 100%;
  height: 100%;
}

.generalize >.c .list .title {
  font-size: 34rpx;
  color: #666;
  margin-top: 15rpx;
}

.generalize>.b {
  padding: 20rpx 23rpx;
  margin-top: 20rpx;
  background-color: white;
}

.total {
  margin-top: 20rpx;
  background-color: white;
  padding: 28rpx 32rpx;
  overflow: hidden;
  position: relative;
}

.total .title {
  font-size: 34rpx;
  line-height: 34rpx;
}

.total .num {
  margin-top: 25rpx;
  color: #F24724;
  font-size: 40rpx;
}
.total .iconyou1{
  position: absolute;
  right: 32rpx;
  bottom: 28rpx;
  font-size: 32rpx;
  color: #999999;
}
.sctx{
  margin-top: 25rpx;
}


.article-list {
  position: relative;
  z-index: 9;
  background-color: white;
  padding-bottom: 30rpx;
}

.article-list>.title {
  width: 100%;
  margin: 0 auto;
  padding: 50rpx 0 20rpx 0;
  text-align: center;
  font-size: 32rpx;
  line-height: 35rpx;
}
.article-list>.title image{
  width: 180rpx;
  display: inline-block;
}
.article-list>.title view{
  display: inline-block;
  margin: 0 10rpx;
}
.article-list .ul {
  width: 686rpx;
  margin: 0 auto;
}

.article-list .ul .li {
  margin-top: 32rpx;
  overflow: hidden;
}

.article-list .ul .li .l {
  width: 312rpx;
  height: 192rpx;
  border-radius: 6rpx;
  float: left;
  overflow: hidden;
}

.article-list .ul .li .l image {
  width: 100%;
  height: 100%;
}

.article-list .ul .li .r {
  margin-left: 336rpx;
}

.article-list .ul .li .r .title {
  font-size: 30rpx;
  font-weight: 600;
  line-height: 36rpx;
  height: 72rpx;
}

.article-list .ul .li .r .c {
  height: 35rpx;
  margin-top: 15rpx;
}

.article-list .ul .li .r .c .zd {
  width: 60rpx;
  height: 35rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 6rpx;
  border: 1px solid rgba(242, 71, 36, 1);
  font-size: 20rpx;
  color: rgba(242, 71, 36, 1);
  line-height: 35rpx;
  text-align: center;
  margin-right: 10rpx;
  float: left;
}

.article-list .ul .li .r .c .type {
  width: 60rpx;
  height: 35rpx;
  border-radius: 6rpx;
  font-size: 20rpx;
  text-align: center;
  line-height: 35rpx;
  display: inline-block;
  color: white;
  float: left;
}

.article-list .ul .li .r .c .type.Activity {
  background: linear-gradient(90deg, rgba(250, 125, 74, 1) 0%, rgba(242, 71, 36, 1) 100%);
}

.article-list .ul .li .r .c .type.News {
  background: linear-gradient(90deg, rgba(33, 192, 254, 1) 0%, rgba(48, 175, 255, 1) 100%);
}

.article-list .ul .li .r .b {
  height: 40rpx;
  margin-top: 30rpx;
}

.article-list .ul .li .r .b .time-bm {
  font-size: 26rpx;
  color: rgba(242, 71, 36, 1);
  line-height: 40rpx;
  float: left;
}

.article-list .ul .li .r .b .time-zx {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(155, 155, 155, 1);
  line-height: 40rpx;
  float: left;
}

.article-list .ul .li .r .b .share {
  float: right;
  line-height: 40rpx;
  font-size: 26rpx;
  color: #999;
  position: relative;
}

.article-list .ul .li .r .b button {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 9;
  display: block;
  opacity: 0;
}
