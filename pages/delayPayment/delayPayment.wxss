/* pages/delayPayment/delayPayment.wxss */

page {
  background-color: #f7f7f7;
}

.delay-order {
}

.delay-order .li {
  margin: 32rpx;
  background-color: white;
  overflow: hidden;
  position: relative;
}

.delay-order .li label .checks {
  width: 40rpx;
  height: 40rpx;
  margin-top: 47rpx;
  border-radius: 50%;
  float: left;
  display: block;
  border: 2rpx solid rgba(28, 176, 246, 1);
  position: relative;
}

.delay-order .li label .checks text {
  position: absolute;
  color: white;
  font-size: 23rpx;
  display: block;
  top: 55%;
  transform: translate(-50%, -50%);
  left: 50%;
}

.delay-order .li label .checks.on {
  background: linear-gradient(141deg, rgba(60, 216, 251, 1) 0%, rgba(28, 176, 246, 1) 100%);
  border: 0px;
}

.delay-order .li label checkbox-group {
  display: none;
}

.delay-order .li .l {
  width: 240rpx;
  height: 145rpx;
  border-radius: 4rpx;
  overflow: hidden;
  float: left;
  margin-left: 24rpx;
}
.delay-order .li .l image{
  width: 100%;
  height: 100%;
}
.delay-order .li .r {
  float: left;
  margin-left: 22rpx;
  width: 300rpx;
}

.delay-order .li .r view.title {
  font-size: 28rpx;
  font-weight: 600;
  color: rgba(51, 51, 51, 1);
  line-height: 42rpx;
}

.delay-order .li .r .b {
  margin-top: 23rpx;
}

.delay-order .li .r .b view:first-child {
  float: left;
  font-size: 36rpx;
  color: rgba(242, 71, 36, 1);
  line-height: 44rpx;
}

.delay-order .li .r .b view:last-child {
  float: right;
  font-size: 32rpx;
  color: rgba(102, 102, 102, 1);
  line-height: 44rpx;
}

.delay-order .li .d {
  position: absolute;
  right: 10rpx;
  top: 0;
  color: #999;
}

.footer-h {
  height: 100rpx;
}

.footer-n {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  background-color: white;
  z-index: 9999;
  border-top: 1px solid #d8d8d8;
}

.footer-n label {
  margin-top: 30rpx;
  margin-left: 50rpx;
  float: left;
  display: block;
  font-size: 28rpx;
  color: rgba(102, 102, 102, 1);
  line-height: 40rpx;
}

.footer-n label .checks {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  float: left;
  display: block;
  border: 2rpx solid rgba(28, 176, 246, 1);
  position: relative;
  margin-right: 22rpx;
}

.footer-n label .checks text {
  position: absolute;
  color: white;
  font-size: 23rpx;
  display: block;
  top: 55%;
  transform: translate(-50%, -50%);
  left: 50%;
}

.footer-n label .checks.on {
  background: linear-gradient(141deg, rgba(60, 216, 251, 1) 0%, rgba(28, 176, 246, 1) 100%);
  border: 0px;
}

.footer-n label checkbox-group {
  display: none;
}

.footer-n .l {
  float: right;
  margin-right: 20rpx;
  font-size: 28rpx;
  color: rgba(51, 51, 51, 1);
  line-height: 58rpx;
  margin-top: 21rpx;
}

.footer-n .l text {
  font-size: 32rpx;
  font-weight: 600;
  color: rgba(242, 71, 36, 1);
  line-height: 58rpx;
  float: right;
}

.footer-n .r {
  float: right;
  margin-right: 32rpx;
  margin-top: 20rpx;
}

.footer-n .r view {
  width: 180rpx;
  height: 60rpx;
  background: linear-gradient(90deg, rgba(33, 192, 254, 1) 0%, rgba(48, 175, 255, 1) 100%);
  border-radius: 30rpx;
  font-size: 28rpx;
  text-align: center;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 60rpx;
}

.item-touch {
  display: flex;
  position: relative;
  width: calc(714rpx - 180rpx);
  height: 209rpx;
}

.item-touch-list {
  z-index: 10;
  width: 714rpx;
  height: 100%;
  padding: 32rpx 32rpx 32rpx 24rpx;
  background-color: #fff;
  box-sizing: border-box;
}

.item-touch-tool {
  width: 150rpx;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 100%;
  background-color: #f43838;
  font-size: 28rpx;
  line-height: 209rpx;
  text-align: center;
  color: #fff;
}
