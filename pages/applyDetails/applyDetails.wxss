/* pages/applyDetails/applyDetails.wxss */
.banner{
  height: 300rpx;
  overflow: hidden;
}
.banner image {
  width: 100%;
}

.info {
  padding: 32rpx;
}

.info .title {
  font-size: 36rpx;
  font-family: PingFangSC;
  font-weight: 600;
  color: rgba(51, 51, 51, 1);
  line-height: 50rpx;
}

.info .title .l {
  width: 76rpx;
  height: 32rpx;
  background: linear-gradient(90deg, rgba(255, 222, 54, 1) 0%, rgba(255, 186, 25, 1) 100%);
  border-radius: 6rpx;
  font-size: 20rpx;
  color: rgba(255, 255, 255, 1);
  line-height: 32rpx;
  text-align: center;
  display: inline-block;
  position: relative;
  top: -5rpx;
}

/* 学科类 */

.info .title .l.type11 {
  background: linear-gradient(90deg, rgba(60, 216, 251, 1) 0%, rgba(28, 176, 246, 1) 100%);
}

/* 其他类 */

.info .title .l.type15 {
  background: linear-gradient(90deg, rgba(76, 227, 185, 1) 0%, rgba(36, 196, 131, 1) 100%);
}

/* 体育类 */

.info .title .l.type14 {
  background: linear-gradient(90deg, rgba(250, 125, 74, 1) 0%, rgba(242, 71, 36, 1) 100%);
}

/* 艺术类 */

.info .title .l.type12 {
  background: linear-gradient(90deg, rgba(181, 154, 252, 1) 0%, rgba(134, 88, 253, 1) 100%);
}

/* 科创类 */

.info .title .l.type13 {
  background: linear-gradient(90deg, rgba(255, 222, 54, 1) 0%, rgba(255, 186, 25, 1) 100%);
}

.info .price {
  font-size: 38rpx;
  font-weight: bold;
  color: rgba(242, 71, 36, 1);
  line-height: 47rpx;
  margin-top: 16rpx;
  margin-bottom: 30rpx;
}

.info .time {
  margin-top: 10rpx;
  font-size: 30rpx;
  color: rgba(51, 51, 51, 1);
  line-height: 42rpx;
}

.info .time .iconfont {
  font-size: 32rpx;
  color: #ffba19;
  float: left;
  margin-right: 14rpx;
  line-height: 42rpx;
}

.desc {
  border-top: 20rpx solid #f5f5f5;
  padding: 40rpx 20rpx;
}

.desc .title {
  width: 152rpx;
  height: 53rpx;
  font-size: 38rpx;
  font-weight: 600;
  color: rgba(51, 51, 51, 1);
  line-height: 53rpx;
  position: relative;
  margin: 0 auto;
  text-align: center;
}

.desc .title text {
  position: relative;
  z-index: 9;
}

.desc .title:before {
  width: 157rpx;
  height: 18rpx;
  background: rgba(28, 176, 246, 1);
  opacity: 0.25;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 0;
  content: '';
  display: block;
}

.desc .content {
  margin-top: 22rpx;
}

.gotop {
  position: fixed;
  right: 32rpx;
  bottom: 172rpx;
  width: 64rpx;
  height: 64rpx;
  text-align: center;
  line-height: 60rpx;
  border-radius: 50%;
  background-color: rgba(33, 192, 254, 1);
}

.gotop text {
  color: white;
  font-size: 30rpx;
}

.footerHeight {
  height: 148rpx;
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  height: 148rpx;
  width: 100%;
  padding: 30rpx 30rpx;
  background-color: white;
  border-top: 1px solid #eee;
  z-index: 9;
}

.footer .l {
  float: left;
  overflow: hidden;
}

.footer .l .li {
  float: left;
  margin-right: 70rpx;
  position: relative;
}

official-account {
  position: fixed;
  bottom: 148rpx;
  left: 0;
  width: 100%;
  height: 148rpx;
  z-index: 9;
  display: none;
}

.footer .l .li:first-child .iconfont {
  font-size: 37rpx;
}

.footer .l .li .iconfont.iconshoucang2, .footer .l .li.on text {
  color: rgba(33, 192, 254, 1);
}

.footer .l .li .iconfont {
  font-size: 40rpx;
  display: block;
  text-align: center;
  line-height: 48rpx;
}

.footer .l .li:last-child {
  margin-right: 0px;
}

.footer .l .li text:last-child {
  text-align: center;
  font-size: 24rpx;
  color: rgba(102, 102, 102, 1);
  line-height: 35rpx;
  display: block;
  margin-top: 5rpx;
}

.footer .l .li.on text:last-child {
  color: rgba(33, 192, 254, 1);
}

.footer .l .li button {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 9;
  display: block;
  opacity: 0;
}

.footer .r {
  float: right;
}

.footer .r view.off {
  background: #ccc;
}

.footer .r view {
  width: 330rpx;
  height: 88rpx;
  background: linear-gradient(90deg, rgba(33, 192, 254, 1) 0%, rgba(48, 175, 255, 1) 100%);
  border-radius: 47rpx;
  font-size: 36rpx;
  color: rgba(255, 255, 255, 1);
  line-height: 88rpx;
  text-align: center;
}

button.userLogin {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 99999999;
  display: block;
  opacity: 0;
}
.login-open{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 9999;
  display: block;
}
.login-open .back{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
  background-color: rgba(0,0,0,0.4);
}
.login-open .login-open-main{
  position: absolute;
  top: 40%;
  left: 10%;
  background-color: white;
  width: 80%;
  box-sizing: border-box;
  padding: 50rpx 30rpx 40rpx;
  z-index: 9;
  border-radius: 10rpx;
}
.login-open .login-open-main .title{
  font-size:32rpx;
  text-align: center;
}
.login-open .login-open-main .btn{
  width: 270rpx;
  height: 80rpx;
  background: linear-gradient(90deg, rgba(60, 216, 251, 1) 0%, rgba(28, 176, 246, 1) 100%);
  border-radius: 55rpx;
  font-size: 32rpx;
  color: rgba(255, 255, 255, 1);
  line-height: 80rpx;
  text-align: center;
  margin: 0 auto;
  margin-top: 60rpx;
}