/* pages/grade/grade.wxss */

.grade .back {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  overflow: hidden;
}

.grade .back image {
  margin-top: -50rpx;
  display: block;
}

.form {
  position: relative;
  width: 686rpx;
  margin: 0 auto;
  margin-top: 270rpx;
  box-shadow: 0px 0px 40rpx 0px rgba(0, 0, 0, 0.05);
  border-radius: 10rpx;
  background: url(data:image/png;base64,) no-repeat left top;
  background-size: 132rpx 99rpx;
  background-color: rgba(255, 255, 255, 1);
  z-index: 9;
  padding: 30rpx;
}
.form .tip{
  font-size:26rpx;
  padding: 30rpx 0 0;
  color:rgba(33, 192, 254, 1);
}
.form .item {
  overflow: hidden;
  border-bottom: 1px solid #eee;
}

.form .item text {
  font-size: 32rpx;
  color: rgba(102, 102, 102, 1);
  line-height: 88rpx;
  display: block;
  float: left;
  width: 130rpx;
}

.form .item  input {
  float: right;
  margin-top: 19rpx;
  width: calc(100% - 180rpx);
  height: 50rpx;
  font-size: 28rpx;
}

.form .code {
}

.form .code input {
  float: left;
  margin-left: 50rpx;
  width: calc(100% - 310rpx);
}

.form .code #checkCode {
  width: 100rpx;
  float: right;
  line-height: 88rpx;
  font-size: 32rpx;
  color: #999;
  text-align: center;
  font-family: Arial;
  font-style: italic;
  font-weight: bolder;
}

.btn {
  width: 686rpx;
  height: 88rpx;
  background: linear-gradient(90deg, rgba(33, 192, 254, 1) 0%, rgba(48, 175, 255, 1) 100%);
  border-radius: 47rpx;
  margin: 80rpx auto;
  font-size: 36rpx;
  text-align: center;
  color: rgba(255, 255, 255, 1);
  line-height: 88rpx;
}
