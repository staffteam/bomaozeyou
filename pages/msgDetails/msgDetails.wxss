/* pages/articleDetails/articleDetails.wxss */

.article-details>.title {
  font-size: 48rpx;
  font-weight: 600;
  color: rgba(51, 51, 51, 1);
  line-height: 67rpx;
  margin: 0 44rpx;
}

.desc {
  margin: 0 44rpx;
  margin-top: 24rpx;
  height: 42rpx;
}

.desc .l {
  float: left;
  font-size: 28rpx;
  color: rgba(155, 155, 155, 1);
  line-height: 42rpx;
}

.desc .l text {
  color: #1cb0f6;
  font-size: 28rpx;
  line-height: 42rpx;
}

.desc  .r {
  float: right;
}

.desc  .r>view {
  font-size: 28rpx;
  color: rgba(155, 155, 155, 1);
  line-height: 42rpx;
  position: relative;
  float: left;
  margin-right: 40rpx;
}
.desc  .r>view.on text.iconfont{
  color: #1cb0f6;
}
.desc  .r>view:last-child {
  margin-right: 0px;
}

.desc  .r>view text.iconfont {
  font-size: 40rpx;
  color: #9b9b9b;
  float: left;
  margin-right: 14rpx;
  display: block;
}

.desc  .r button {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 99999999;
  display: block;
  opacity: 0;
}

.content {
  margin: 40rpx 44rpx;
}

.recommend {
  margin-top: 80rpx;
}

.recommend> .title {
  width: 152rpx;
  height: 53rpx;
  font-size: 38rpx;
  font-weight: 600;
  color: rgba(51, 51, 51, 1);
  line-height: 53rpx;
  position: relative;
  margin: 0 auto;
  text-align: center;
}

.recommend> .title text {
  position: relative;
  z-index: 9;
}

.recommend> .title:before {
  width: 157rpx;
  height: 18rpx;
  background: rgba(28, 176, 246, 1);
  opacity: 0.25;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 0;
  content: '';
  display: block;
}

.recommend-list {
  margin: 26rpx 32rpx 0;
  padding-bottom: 40rpx;
}

.recommend-list .li {
  overflow: hidden;
  border-bottom: 1px solid #EEEEEE;
  padding: 30rpx 0;
}
.recommend-list .li:last-child{
  border-bottom: 0px;
}
.recommend-list .li .l {
  width: 418rpx;
  float: left;
}

.recommend-list .li .l .title {
  font-size: 35rpx;
  line-height: 45rpx;
}

.recommend-list .li .l .time {
  margin-top: 25rpx;
  font-size: 24rpx;
  color: rgba(153, 153, 153, 1);
  line-height: 30rpx;
}
.recommend-list .li .r{
  width: calc(100% - 437rpx);
  float:right;
}

.collect.on text{
  color: #1cb0f6;
}